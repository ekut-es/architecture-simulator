# computes the sum of the numbers from 1 to n
# result gets saved in MEM[1025]
Loopcount = 0x400
Result = 0x401
:0x400:20 # enter n here

LDA Loopcount # skip to the end if n=0
BRZ end
loop:
    LDA Result
    ADD Loopcount
    STO Result
    LDA Loopcount
    DEC
    STO Loopcount
    BRZ end
    ZRO
    BRZ loop
end:
